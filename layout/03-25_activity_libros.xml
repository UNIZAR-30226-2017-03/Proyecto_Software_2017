<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3pt"
        android:layout_marginLeft="1pt"
        android:layout_marginRight="2pt">
        <TextView android:id="@+id/nombreMiLi"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textSize="10pt"
            android:lines = "1"
            android:ellipsize="marquee"/>

        <TextView android:id="@+id/usuarioMiLi"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="right"
            android:layout_gravity="right"
            android:ellipsize="marquee"
            android:lines = "1"/>
        <barbarahliskov.cambialibros.ButtonList android:id="@+id/FavMiLi"
            android:layout_width="15pt"
            android:layout_height="15pt"
            android:layout_gravity="center"
            android:gravity="right"
            android:background="@drawable/ic_slide_switch_on"
            android:focusable="false"
            android:visibility="invisible"
            android:focusableInTouchMode="false"
            android:layout_alignParentRight="true"/>


    </RelativeLayout>

    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3pt"
        android:layout_marginLeft="1pt"
        android:layout_marginRight="2pt">
        <TextView android:id="@+id/ciudadMiLi"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:ellipsize="marquee"
            android:lines = "1"/>

        <TextView android:id="@+id/distMiLi"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_gravity="right"
            android:ellipsize="marquee"
            android:lines = "1"/>
    </LinearLayout>



</LinearLayout>
