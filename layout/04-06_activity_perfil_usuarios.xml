<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_perfil"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="barbarahliskov.cambialibros.Perfil">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button android:id="@+id/fav_button"
            android:layout_width="15pt"
            android:layout_height="15pt"
            android:layout_gravity="center"
            android:gravity="right"
            android:background="@drawable/ic_slide_switch_on"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_alignParentRight="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="7pt"
                android:text="Nombre de usuario:"
                android:visibility="visible"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:id="@+id/user_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:text="laura@gmail.com"
                android:textSize="10pt"
                android:singleLine="true" />
        </LinearLayout>
    </RelativeLayout>



    <TextView
        android:layout_marginTop="5pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="7pt"
        android:text="Ciudad:"
        android:visibility="visible" />

    <TextView
        android:id="@+id/user_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:inputType="text"
        android:text="Zaragoza"
        android:textSize="10pt"
        android:singleLine="true" />

    <LinearLayout
        android:layout_marginTop="5pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="7pt"
            android:text="ValoraciÃ³n media:  "
            android:visibility="visible" />
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3.3/5"
            android:textStyle="bold"
                android:textSize="7pt"/>

    </LinearLayout>


        <RatingBar
            android:id="@+id/val_media"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="3.5"
            android:layout_alignParentLeft="true"/>



    <TextView
        android:layout_marginTop="5pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="7pt"
        android:text="Valorar:"
        android:visibility="visible" />

    <RatingBar
        android:id="@+id/nueva_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"/>

    <Button
        android:id = "@+id/valorar_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VALORAR"/>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/libros_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VER LIBROS"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>

        <Button
            android:id="@+id/contactar_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONTACTAR"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>


</LinearLayout>
