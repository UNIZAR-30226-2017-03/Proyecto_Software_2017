<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="barbarahliskov.cambialibros.Menu"
    android:weightSum="1"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <ImageView
        android:layout_width="103dp"
        android:gravity="center"
        android:layout_height="103dp"
        android:src="@drawable/search_button"
        android:padding="15dp"
        android:id="@+id/btn_search"
        android:background="@drawable/circle_background"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_alignParentLeft="true"/>

    <ImageView
        android:layout_width="103dp"
        android:gravity="center"
        android:layout_height="103dp"
        android:src="@drawable/library_button"
        android:padding="15dp"
        android:id="@+id/btn_library"
        android:background="@drawable/circle_background"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="30dp"
        app:layout_constraintHorizontal_bias="0.02"
        android:layout_alignParentRight="true"/>

    <ImageView
        android:layout_width="51dp"
        android:gravity="center"
        android:layout_height="51dp"
        android:src="@drawable/icono_estrella"
        android:padding="11dp"
        android:id="@+id/btn_lib_favs"
        android:background="@drawable/fav_background"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_alignBottom="@id/btn_library"
        android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="103dp"
            android:gravity="center"
            android:layout_height="103dp"
            android:src="@drawable/profile_button"
            android:padding="15dp"
            android:id="@+id/btn_profile"
            android:background="@drawable/circle_background"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="30dp"
            android:layout_alignParentLeft="true" />

        <ImageView
            android:layout_width="51dp"
            android:gravity="center"
            android:layout_height="51dp"
            android:src="@drawable/icono_estrella"
            android:padding="11dp"
            android:id="@+id/btn_favoritos"
            android:background="@drawable/fav_background"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_alignBottom="@id/btn_profile"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="105dp"/>

        <ImageView
            android:layout_width="103dp"
            android:gravity="center"
            android:layout_height="103dp"
            android:src="@drawable/history_button"
            android:padding="15dp"
            android:id="@+id/btn_history"
            android:background="@drawable/circle_background"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="30dp"
            app:layout_constraintHorizontal_bias="0.02"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
        <ImageView
            android:layout_width="51dp"
            android:gravity="center"
            android:layout_height="51dp"
            android:src="@drawable/delete"
            android:padding="0dp"
            android:id="@+id/deleteBook"
            android:background="@drawable/fav_background"
            android:layout_alignParentRight="true"
            android:layout_marginRight="90dp"
            android:layout_marginTop="20dp"/>

        <ImageView
            android:layout_width="51dp"
            android:gravity="center"
            android:layout_height="51dp"
            android:src="@drawable/add"
            android:padding="0dp"
            android:id="@+id/addBook"
            android:background="@drawable/add_background"
            app:layout_constraintLeft_toRightOf="@+id/deleteBook"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:text="El que tiene imaginación, con qué facilidad saca de la nada un mundo. \nGustavo Adolfo Bécquer."
            android:layout_width="147dp"
            android:layout_height="105dp"
            android:id="@+id/textView"
            android:textStyle="normal|italic"
            android:textAlignment="center"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="8dp"
            app:layout_constraintVertical_bias="0.96" />

    </RelativeLayout>
</LinearLayout>
